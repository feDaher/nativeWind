{
  "extends": "./node_modules/expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "nativewind/types",
      "expo-router/types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "index.ts",
    "app.config.*"
  ]
}
